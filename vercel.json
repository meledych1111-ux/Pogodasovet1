{
  "functions": {
    "api/bot.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/bot.js"
    },
    {
      "source": "/api/bot",
      "destination": "/api/bot.js"
    },
    {
      "source": "/game",
      "destination": "/public/index.html"
    },
    {
      "source": "/public/(.*)",
      "destination": "/public/$1"
    }
  ]
}
