{
  "functions": {
    "api/bot.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/save-score.js": {
      "maxDuration": 10
    },
    "api/user-stats.js": {
      "maxDuration": 10
    },
    "api/top-players.js": {
      "maxDuration": 10
    },
    "api/check-db.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/bot.js"
    },
    {
      "source": "/api/bot",
      "destination": "/api/bot.js"
    },
    {
      "source": "/game",
      "destination": "/public/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
