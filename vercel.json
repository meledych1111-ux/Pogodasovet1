{
  "functions": {
    "api/bot.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/save-score.js": {
      "maxDuration": 10
    },
    "api/save-progress.js": {
      "maxDuration": 10
    },
    "api/get-progress.js": {
      "maxDuration": 10
    },
    "api/user-stats.js": {
      "maxDuration": 10
    },
    "api/top-players.js": {
      "maxDuration": 10
    },
    "api/check-db.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/game",
      "destination": "/public/index.html"
    },
    {
      "source": "/api/bot",
      "destination": "/api/bot.js"
    }
  ],
  "headers": [
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
